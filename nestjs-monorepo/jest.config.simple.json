{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": [
    "apps/**/*.(t|j)s",
    "!apps/**/*.spec.ts",
    "!apps/**/*.e2e-spec.ts",
    "!apps/**/main.ts"
  ],
  "coverageDirectory": "./coverage",
  "testEnvironment": "node"
}