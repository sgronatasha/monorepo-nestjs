    "@types/bcrypt": "^6.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.0.0",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "@types/supertest": "^6.0.3",
    "jest": "^27.5.1",
    "ts-jest": "^27.1.5",
    "typescript": "^4.5.0"
  }
