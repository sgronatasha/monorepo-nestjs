{
  "name": "nestjs-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "build": "nest build",
    "build:gateway": "nest build gateway",
    "build:auth": "nest build authentication",
    "start:gateway": "node dist/apps/gateway/src/main.js",
    "start:auth": "node dist/apps/authentication/src/main.js",
    "lint": "eslint . --ext .ts",
